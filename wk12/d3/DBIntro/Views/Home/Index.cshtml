@{
    ViewData["Title"] = "Home Page";
}
@model Container
@* @model Movie *@
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3>Here's all the movies:</h3>
    @* VIEWBAG METHOD *@
    <table class="table table-striped table-dark">
        <thead>
            <th>Title</th>
            <th>Type</th>
            <th>Description</th>
            <th>ReleaseDate</th>
            <th>Rate</th>
            <th>Actions</th>
        </thead>
        @{
            foreach (var movie in ViewBag.AllMovies)
            {
                <tr>
                    <td><a asp-action="Info" asp-route-id="@movie.MovieId" asp-controller="Home">@movie.Title</a></td>
                    <td>@movie.Type</td>
                    <td>@movie.Description</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.Rate</td>
                    <td><a asp-action="Edit" asp-route-id="@movie.MovieId" asp-controller="Home">Edit</a> | <a
                        asp-action="Delete" asp-route-id="@movie.MovieId" asp-controller="Home">Delete</a></td>
                </tr>
            }
        }
    </table>
    @* END VIEWBAG METHOD *@
    @* VIEWMODEL METHOD *@
    <table class="table table-striped table-dark">
        <thead>
            <th>Title</th>
            <th>Type</th>
            <th>Description</th>
            <th>ReleaseDate</th>
            <th>Rate</th>
            <th>Actions</th>
        </thead>
        @{
            foreach (var movie in Model.MovieList)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Type</td>
                    <td>@movie.Description</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.Rate</td>
                    <td>Edit | Delete</td>
                </tr>
            }
        }
    </table>
