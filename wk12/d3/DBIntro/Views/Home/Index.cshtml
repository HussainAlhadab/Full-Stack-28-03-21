@{
    ViewData["Title"] = "Home Page";
}
@* @model List<Movie> *@
@model Movie
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3>Here's all the movies:</h3>
    @* VIEWBAG METHOD *@
    <table class="table table-striped table-dark">
        <thead>
            <th>Title</th>
            <th>Type</th>
            <th>Description</th>
            <th>ReleaseDate</th>
            <th>Rate</th>
            <th>Actions</th>
        </thead>
        @{
            foreach (var movie in ViewBag.AllMovies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Type</td>
                    <td>@movie.Description</td>
                    <td>@movie.ReleaseDate</td>
                    <td>@movie.Rate</td>
                    <td>Edit | Delete</td>
                </tr>
            }
        }
    </table>
    @* END VIEWBAG METHOD *@
